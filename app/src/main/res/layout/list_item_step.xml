<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginStart="@dimen/default_half"
    android:layout_marginLeft="@dimen/default_half"
    android:layout_marginEnd="@dimen/default_half"
    android:layout_marginRight="@dimen/default_half">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/default_half">

        <ImageView
            android:id="@+id/recipeImage"
            style="@style/LeftImageView"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_step" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/windowBackground" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                style="@style/CardTitleText"
                android:text="@string/step" />

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_half"
                android:layout_marginStart="@dimen/default_half"
                android:ellipsize="end"
                android:maxLines="3"
                tools:text="1. Preheat the oven to 350Â°F. Butter a 9' deep dish pie pan." />

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>